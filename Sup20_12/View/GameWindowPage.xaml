<Page x:Class="Sup20_12.View.GameWindowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sup20_12.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameWindowPage">

    <Grid Background="White">
        

        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"   />
        <Button Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="3" Grid.Row="1" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="3" Grid.Row="2" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"   />
        <Button Grid.Column="3" Grid.Row="3" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="3" Grid.Row="4" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="3" Grid.Row="5" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"   />
        <Button Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="1" Grid.Row="5" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"   />
        <Button Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Grid.Column="2" Grid.Row="4" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />
        <Button Name="{Binding buttonId}" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Right" 
            MinWidth="50" Margin="3" Content="Send"  />

        
    </Grid>
</Page>
