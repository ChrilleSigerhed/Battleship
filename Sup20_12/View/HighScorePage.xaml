<Page x:Class="Sup20_12.View.HighScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sup20_12.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" 
      Title="HighScorePage">

    <Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Images/bgHighscorePage.jpg" />
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200px"/>
                <ColumnDefinition Width="235px"/>
                <ColumnDefinition Width="200px"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="130px"/>
                <RowDefinition Height="220px"/>
                <RowDefinition Height="100px"/>
            </Grid.RowDefinitions>


            <Button Grid.Column="1" Grid.Row="2" Command="{Binding GoToMainPage}" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Assets/Images/btnBack.png" Height="40"></Image>
            </Button>

            <ListBox ItemsSource="{Binding HighScoreLst}" Grid.Column="2" Grid.Row="1" FontSize="25" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="10,10,-117,0">

            </ListBox>

        </Grid>
    </Grid>
</Page>
