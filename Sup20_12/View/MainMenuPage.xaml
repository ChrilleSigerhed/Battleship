
    <Page x:Class="Sup20_12.View.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sup20_12"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/water.jpg" />
        </Grid.Background>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="150px"/>
            <ColumnDefinition MinWidth="150px"/>
            <ColumnDefinition MinWidth="150px"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="150px"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="15px"/>
            <RowDefinition />
            <RowDefinition Height="15px"/>
            <RowDefinition />
            <RowDefinition Height="25px"/>
        </Grid.RowDefinitions>

            <Button Content="Starta Spel" Grid.Column="1" Grid.Row="3" Background="White" Command="{Binding ChoosePlayerPageCommand}"/>
            <Button Content="Topplistor" Grid.Column="1" Grid.Row="5" Background="White" Command="{Binding HighscorePageCommand}"/>
            <Button Content="Avsluta" Grid.Column="1" Grid.Row="7" Background="White" Command="{Binding ExitGameCommand}"/>
        </Grid>
        <Frame x:Name="Main" Content="{Binding SelectedPage}"/>
    </Grid>
</Page>
